<UserControl
    x:Class="NitaVision.UI.Source.CoreUI.NitaImageSwitcher"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:NitaVision.UI.Source.CoreUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    d:DesignHeight="100"
    d:DesignWidth="100"
    Background="red"
    mc:Ignorable="d">
    <Border MouseDown="Border_MouseDown">
        <local:NitaImage
            x:Name="PART_Image"
            Source="{Binding Image, RelativeSource={RelativeSource AncestorType=local:NitaImageSwitcher}, Mode=TwoWay}"
            Style="{StaticResource FadeImageStyle}" />
    </Border>
</UserControl>
