<UserControl x:Class="NitaVision.UI.UI.StudyList.FolderFollower"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:NitaVision.UI.UI.StudyList"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="150">
    <UserControl.Resources>
        <DataTemplate x:Key="FolderTemplate">
            <Grid>
                <local:FolderItem 
                FolderName="{Binding Name}" 
                FolderIsReadOnly="true"/>
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <ContentPresenter x:Name="follwer" 
                      Opacity="0.5"
                      Height="40"
                      Width="120"
                      Panel.ZIndex="99"
                      Visibility="{Binding IsVisible,Converter={StaticResource BoolToVisibilityConverter}, RelativeSource={RelativeSource AncestorType=local:FolderFollower}}" 
                      Content ="{Binding Folder,RelativeSource={RelativeSource AncestorType=local:FolderFollower}}"
                      ContentTemplate="{StaticResource FolderTemplate}">
        </ContentPresenter>
</UserControl>
