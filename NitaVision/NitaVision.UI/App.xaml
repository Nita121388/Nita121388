<Application x:Class="NitaVision.UI.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NitaVision.UI" 
             xmlns:convert="clr-namespace:NitaVision.UI.Source.Convert"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Source/Dict/SourceDict.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Source/Template/StudyGridItemTemplate.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Source/Style/SliderStyle.xaml"/>
                <ResourceDictionary Source="pack://application:,,,/Source/Style/CustomWindow.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <convert:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
            <convert:PlayStateToVisibilityConverter x:Key="PlayStateToVisibilityConverter" />
            <convert:StatusToColorConverter x:Key="StatusToColorConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
