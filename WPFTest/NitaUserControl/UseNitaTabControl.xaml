<UserControl
    x:Class="WPFTest.NitaUserControl.UseNitaTabControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFTest.NitaUserControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nita="clr-namespace:WPFTest.NitaCustomControl"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel>
        <nita:NitaTabControl>
            <nita:NitaTabItem HeaderText="Header" Icon="{StaticResource Add}">
                <local:NitaControlSamples />
            </nita:NitaTabItem>
            <nita:NitaTabItem
                Background="MistyRose"
                HeaderText="Header"
                Icon="{StaticResource Check}">
                <local:UseNitaCustomControl />
            </nita:NitaTabItem>
        </nita:NitaTabControl>
    </StackPanel>
</UserControl>
