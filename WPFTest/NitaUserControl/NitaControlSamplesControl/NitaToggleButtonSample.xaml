<UserControl
    x:Class="WPFTest.NitaUserControl.NitaControlSamplesControl.NitaToggleButtonSample"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:WPFTest.NitaUserControl.NitaControlSamplesControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:nita="clr-namespace:WPFTest.NitaCustomControl"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <StackPanel x:Name="NitaToggleButtons" Orientation="Horizontal">
        <nita:NitaControlSample
            x:Name="nitaToggleButton1"
            Title="NitaToggleButton"
            Description="SizeType:Small">
            <nita:NitaToggleButton SizeType="Small" />
        </nita:NitaControlSample>
        <nita:NitaControlSample
            x:Name="nitaToggleButton2"
            Title="NitaToggleButton"
            ExtDescription="default SizeType:Medium">
            <nita:NitaToggleButton />
        </nita:NitaControlSample>
        <nita:NitaControlSample
            x:Name="nitaToggleButton3"
            Title="NitaToggleButton"
            Description="SizeType:Large">
            <nita:NitaToggleButton SizeType="Large" />
        </nita:NitaControlSample>
    </StackPanel>
</UserControl>
