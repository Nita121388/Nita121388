<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:convert="clr-namespace:WPFTest.Converter"
    xmlns:nita="clr-namespace:WPFTest.NitaCustomControl">
    <!--#region NitaCheckBox-->
    <Style TargetType="{x:Type nita:NitaCheckBox}">
        <Setter Property="HorizontalAlignment" Value="Center" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type nita:NitaCheckBox}">
                    <nita:NitaImageSwitcher
                     x:Name="PART_ImageSwitcher"
                     Images="{TemplateBinding Icons}"
                     SizeType="{TemplateBinding SizeType}" />
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--#endregion NitaCheckBox-->
</ResourceDictionary>